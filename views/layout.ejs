<!DOCTYPE html>
<html ng-app="leansite" ng-cloak>

<head>
  <title>LEAN site</title>
  <!-- Viewport mobile tag for sensible mobile support -->
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
  <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
  <link rel="manifest" href="/manifest.json">
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
  <meta name="theme-color" content="#ffffff">

  <!--STYLES-->
  <link rel="stylesheet" href="/min/production.min.css">
  <!--STYLES END-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <base href="/">



  <!--Google Analytics-->
  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
  ga('create', 'UA-90530953-3', 'auto');
  ga('send', 'pageview');
  </script>

</head>

<body id="main" ng-controller="MainController as mc" ng-cloak layout="column" layout-gt-sm="row" layout-wrap>
  <tool-bar flex="100"></tool-bar>
  <message-container layout="row" layout-align="center center" ng-if="mc.error || mc.message">
    <div layout="column">
      <div layout-padding ng-if="mc.error">
        <p>Error: <span class="red-text text-darken-1" ng-bind="mc.error"></span></p>
      </div>
      <div layout-padding ng-if="mc.message">
        <pre class="text-info md-padding" ng-bind="mc.message"></pre>
      </div>
    </div>
    <md-button class="md-fab md-mini md-primary" md-no-ink ng-click="mc.error = false; mc.message = false">&times;</md-button>
  </message-container>
  <side-nav layout="column"></side-nav>
  <div ng-view flex><!-- ng-view container --></div>
  <footer flex="100" layout-padding class="blue-grey darken-2">
    <ul class="container">
      <li><a ng-href="/about" class="white-text">About</a></li>
      <li><a ng-href="/contact" class="white-text">Contact Us</a></li>
      <li><a ng-href="/feedback" class="white-text">Send us your feedback</a></li>
    </ul>
  </footer>

  <!--SCRIPTS-->
  <script src="/min/production.min.js"></script>
  <!--SCRIPTS END-->
</body>

</html>
